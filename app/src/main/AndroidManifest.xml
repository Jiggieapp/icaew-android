<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jt.icaew.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppCustomTheme">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.program.detail.ProgramDetailActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.contact.detail.ContactDetailActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.events.detail.EventDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.universities.detail.UniversityDetailActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>