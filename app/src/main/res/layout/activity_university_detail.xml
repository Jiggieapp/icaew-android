<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:padding="@dimen/padding_standard_half">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_program_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/lbl_address"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_program_description"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:text="Address:"/>

            <TextView
                android:id="@+id/lbl_address_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_program_description"
                android:layout_toRightOf="@id/lbl_address"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/lbl_phone"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_address_fill"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:text="Phone:"/>

            <TextView
                android:id="@+id/lbl_phone_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_address_fill"
                android:layout_toRightOf="@id/lbl_phone"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/lbl_email"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_phone_fill"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="8dp"
                android:text="Email:"/>

            <TextView
                android:id="@+id/lbl_email_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_phone_fill"
                android:layout_toRightOf="@id/lbl_email"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>