<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_banner"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/lbl_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_banner"
                android:layout_margin="8dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/lin_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/lbl_about_us"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:id="@+id/lin_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="24dp">
                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_share"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Share"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="24dp">
                    <ImageView
                        android:id="@+id/img_like"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_like"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Like"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_inquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="16dp">
                    <ImageView
                        android:id="@+id/img_inquiry"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_board"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Inquiry"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_info"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_info"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="More info"
                        android:textSize="12sp"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>